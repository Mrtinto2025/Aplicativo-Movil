{
  "info": {
    "_postman_id": "backend-api-collection-001",
    "name": "Aplicativo-Movil Backend API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login Admin",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"admin\", \"password\": \"admin123\"}"
        },
        "url": { "raw": "{{baseUrl}}/api/auth/login", "host": ["{{baseUrl}}"], "path": ["api","auth","login"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if(json && json.token){",
              "  pm.environment.set('adminToken', json.token);",
              "  pm.environment.set('authHeaderAdmin', 'Bearer ' + json.token);",
              "}",
              "pm.test('Login returned token', function(){ pm.expect(json.token).to.be.a('string'); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Create User (coord)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"coord1\", \"email\": \"coord1@example.com\", \"password\": \"coordpass\", \"role\": \"COORDINADOR\", \"active\": true}"
        },
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "if(json && json.id){ pm.environment.set('coordId', json.id); }",
              "pm.test('User created', function(){ pm.expect(json.id).to.exist; });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
